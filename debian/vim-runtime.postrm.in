#!/bin/sh
set -e

basedir=/usr/share/vim/@VIMCUR@/doc

rm_diversion() {
  dpkg-divert --package vim-runtime --rename --remove "$1"
}

rm -f /usr/share/vim/addons/doc/tags
case "$1" in
  remove|abort-install|disappear)
    rm_diversion $basedir/help.txt
    rm_diversion $basedir/tags
    ;;
esac

#DEBHELPER#

exit 0
